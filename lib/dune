(library
 (name ant)
 (libraries pprint batteries core)
 (modules Lexer Tokens Parser Syntax Tyck Seq)
 (preprocess
  (pps ppx_string ppx_let ppx_deriving.show)))

(ocamllex Lexer)

(menhir
 (modules Tokens)
 (explain false)
 (flags --only-tokens))

(menhir
 (modules Parser Tokens)
 (merge_into Parser)
 (explain true)
 (flags
  --external-tokens
  Tokens
  --unused-tokens
  --unused-precedence-levels
  --exn-carries-state))
